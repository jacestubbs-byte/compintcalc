                    <div class="relative group">

                        <span class="absolute left-0 top-1/2 -translate-y-1/2 text-white/50 font-bold">$</span>

                        <input type="number" id="principalInput" value="10000" class="w-full bg-transparent border-b-2 border-white/20 py-2 pl-4 pr-0 font-extrabold text-white focus:outline-none focus:border-white transition-colors text-xl">

                    </div>

                </div>



                <!-- Monthly Contribution -->

                <div class="space-y-4">

                    <div class="flex justify-between items-baseline">

                        <label class="text-[10px] font-bold uppercase tracking-[0.2em] text-white/70">Monthly Contribution</label>

                        <span id="contributionVal" class="text-sm font-bold text-white">$1,000</span>

                    </div>

                    <input type="range" id="contributionSlider" min="0" max="10000" step="100" value="1000" class="w-full cursor-pointer">

                </div>



                <!-- Years -->

                <div class="space-y-4">

                    <div class="flex justify-between items-baseline">

                        <label class="text-[10px] font-bold uppercase tracking-[0.2em] text-white/70">Years</label>

                        <span id="yearsVal" class="text-sm font-bold text-white">25y</span>

                    </div>

                    <input type="range" id="yearsSlider" min="1" max="50" value="25" class="w-full cursor-pointer">

                </div>



                <!-- Rate -->

                <div class="space-y-4">

                    <div class="flex justify-between items-baseline">

                        <label class="text-[10px] font-bold uppercase tracking-[0.2em] text-white/70">Return Rate</label>

                        <span id="rateVal" class="text-sm font-bold text-white">8%</span>

                    </div>

                    <input type="range" id="rateSlider" min="1" max="15" step="0.1" value="8" class="w-full cursor-pointer">

                </div>

            </div>

